<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .productList ul li {
        display: inline;
        border: 1px solid black;
        padding: 10px;
        font-size: larger;
        text-align: center;
      }
    </style>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <input placeholder="Search Item" />
    <div class="productList">
      <ul>
        <li class="product">item</li>
        <li class="product">category</li>
        <li class="product">price</li>
        <li class="product">description</li>
      </ul>
      <% data ? %>
      <ul>
        <% data.forEach((product) =>{ %>
        <li class="home"><%= product.item %></li>
        <li class="home"><%= product.category %></li>
        <li class="home"><%= product.price %></li>
        <li class="home"><%= product.description %></li>
        <br />
        <% }) %><br />
      </ul>
      :
      <h1>No Item Found</h1>
    </div>
  </body>
</html>


